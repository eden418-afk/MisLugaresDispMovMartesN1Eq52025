<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MiEstilo" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>


    <!-- BotÃ³n principal -->
    <style name="EstiloBoton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>

        <!-- Apariencia -->
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/purple_200</item>
    </style>

    <!-- Variante alternativa (colores/borde distintos) -->
    <style name="EstiloBoton.Alternativo" parent="EstiloBoton">
        <item name="backgroundTint">@color/teal_700</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/teal_700</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>